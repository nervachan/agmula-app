<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="60sp"
		android:stretchColumns="1">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton4"
				android:layout_width="209dp"
				android:layout_height="wrap_content"
				android:onClick="seeCalendar"
				android:src="@mipmap/ic_launcher" />

			<ImageButton
				android:id="@+id/imageButton3"
				android:layout_width="164dp"
				android:layout_height="wrap_content"
				android:onClick="seeForecast"
				android:src="@mipmap/ic_launcher" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Calendar" />

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Weather Forecast" />
		</TableRow>

	</TableLayout>

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="240sp"
		android:stretchColumns="1">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton7"
				android:layout_width="209dp"
				android:layout_height="wrap_content"
				android:onClick="seeAvailPlants"
				android:src="@mipmap/ic_launcher" />

			<ImageButton
				android:id="@+id/imageButton6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="seePlantSickness"
				android:src="@mipmap/ic_launcher" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Garden Plants Database" />

			<TextView
				android:id="@+id/textView6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Pests/Sickness Database" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</TableLayout>

</RelativeLayout>